/* pages/answer.wxss */
.container {
  height: 100vh;
  background-color: rgb(243, 236, 223);
}
.scroll-view {
  position: fixed;
  width: 100%;
  top: 0;
  bottom: 210rpx;
}

.bottom-box {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 160rpx;
  width: 100%;
  background-color: #fff;
  padding-bottom: 50rpx;
}
.item {
  display: flex;
  z-index: 9;
  width: calc(100% - 40rpx);
  overflow: hidden;
  box-sizing: border-box;
  margin: 20rpx;
}
.text {
  background-color: #fff;
  padding: 24rpx;
  flex: 1;
  width: 0;
  border-radius: 12rpx;
}
.cont {
  width: 100%;
  /* overflow: hidden; */
  white-space: wrap;

}


.baseInfo-avatar {
  overflow: hidden;
  width: 80rpx;
  height: 80rpx;
  margin: 20rpx 20rpx 20rpx 0;
  border-radius: 50%;
}
.logo {
  width: 80rpx;
  height: 80rpx;
}