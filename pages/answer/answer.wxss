/* pages/answer.wxss */
.container {
  height: 100vh;
  background-color: rgb(243, 236, 223);
}
.scroll-view {
  position: fixed;
  width: 100%;
  top: 0;
  bottom: 220rpx;
}

.bottom-box {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 160rpx;
  width: 100%;
  background-color: #fff;
  padding-bottom: 50rpx;
}
.item {
  display: flex;
  z-index: 9;
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
  margin: 20rpx 0;
}
.text-box {
  flex: 1;
  width: 0;
}
.text-box-rtl {
  flex: 1;
  width: 0;
  text-align: right;
}
.cont {
  display: inline-block;
  background-color: #fff;
  padding: 24rpx;
  white-space: wrap;
  border-radius: 12rpx;
}

.baseInfo-avatar {
  overflow: hidden;
  width: 80rpx;
  height: 80rpx;
  margin: 0 20rpx;
  border-radius: 50%;
}
.logo {
  width: 80rpx;
  height: 80rpx;
}